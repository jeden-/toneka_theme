/* =====================================
   RESET I PODSTAWOWE STYLE
   ===================================== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Header przeźroczysty na stronie produktu */
.product-page-header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: transparent;
    height: 82px;
}

.product-page-header .toneka-header-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    height: 100%;
    max-width: none;
    padding: 0;
}

.product-page-header .toneka-header-left {
    display: flex;
    align-items: center;
    padding-left: 7%;
}

.product-page-header .toneka-header-right {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 7%;
}

.product-page-header .toneka-primary-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
}

.product-page-header .toneka-primary-menu li a {
    color: #ffffff;
    text-decoration: none;
    font-size: 14px;
    font-weight: 300;
    text-transform: uppercase;
}

.product-page-header .toneka-header-actions {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-left: 30px;
}

.product-page-header .toneka-account-link,
.product-page-header .toneka-cart-link {
    color: #ffffff;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    text-transform: uppercase;
}

.product-page-header .cart-count {
    background: #ffffff;
    color: #000000;
    border-radius: 50%;
    min-width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: bold;
}

/* Globalny reset dla strony produktu - usuń ograniczenia szerokości */
.single-product .toneka-hero-section,
.single-product .toneka-product-info-section,
.single-product .toneka-more-section,
.single-product .toneka-related-products {
    max-width: none !important;
}

/* Resetuj style dla elementów które mogą ograniczać szerokość */
.single-product .wp-site-blocks,
.single-product .wp-block-post-content,
.single-product .entry-content,
.single-product .content-area,
.single-product .site-main {
    width: 100% !important;
    max-width: none !important;
}

/* HTML i body pełna szerokość */
html {
    width: 100%;
    overflow-x: hidden;
}

html,
body {
    width: 100% !important;
    max-width: none !important;
    background: #000000;
    color: #ffffff;
    font-family: 'Figtree', sans-serif;
    font-weight: 400;
    line-height: 1.4;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}

/* Wymuś pełną szerokość dla kontenerów */
#page,
.site,
#content,
.site-content {
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 0;
}

/* Usuń ograniczenia szerokości WooCommerce */
.woocommerce,
.woocommerce-page {
    width: 100%;
    max-width: none;
}

/* Usuń domyślne kontenery WordPress */
.container,
.wp-block-group__inner-container {
    width: 100%;
    max-width: none;
    padding: 0;
}

/* Specjalne reguły dla strony produktu */
.single-product #content,
.single-product .site-content {
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 0;
}

/* Wymuś pełną szerokość dla wszystkich main elementów na stronie produktu */
.single-product main,
.single-product .woocommerce,
.single-product .product,
.single-product .entry-content,
.single-product .post-content,
.single-product article,
.single-product .hentry {
    width: 100vw !important;
    max-width: none !important;
    margin: 0 !important;
    padding: 0 !important;
}

/* Usuń wszystkie ograniczenia szerokości dla strony produktu */
.single-product .wp-block-group,
.single-product .wp-container,
.single-product .alignwide,
.single-product .alignfull {
    width: 100vw !important;
    max-width: none !important;
    margin: 0 !important;
}

/* =====================================
   HEADER GŁÓWNY
   ===================================== */
.site-header {
    position: relative;
    z-index: 999;
}

.toneka-main-header {
    background: transparent;
    height: 82px;
}

.toneka-header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    max-width: 1920px;
    margin: 0 auto;
    padding: 7px 60px 7px 40px;
}

.toneka-header-left {
    display: flex;
    align-items: center;
}

.toneka-header-right {
    display: flex;
    align-items: center;
}

/* Logo */
.site-branding {
    display: flex;
    align-items: center;
}

.site-branding a {
    display: flex;
    align-items: center;
    text-decoration: none;
}

.custom-logo {
    height: 18px!important;
    width: auto;
    max-width: 140px;
}

.toneka-default-logo a {
    color: #ffffff;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    text-decoration: none;
}

/* Menu główne */
.main-navigation {
    display: flex;
    align-items: center;
}

.toneka-primary-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
}

.toneka-primary-menu .menu-item {
    padding: 8px;
}

.toneka-primary-menu .menu-item a {
    color: #ffffff;
    text-decoration: none;
    font-family: 'Poppins', sans-serif;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    line-height: 1.4;
    transition: opacity 0.3s ease;
}

.toneka-primary-menu .menu-item a:hover {
    opacity: 0.8;
}

.toneka-primary-menu .menu-item.current-menu-item a,
.toneka-primary-menu .menu-item.current_page_item a {
    opacity: 1;
    position: relative;
}

.toneka-primary-menu .menu-item.current-menu-item a::after,
.toneka-primary-menu .menu-item.current_page_item a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 1px;
    background: #ffffff;
}

/* Menu toggle (hamburger) */
.menu-toggle {
    display: none;
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    flex-direction: column;
    gap: 4px;
}

.hamburger-line {
    width: 20px;
    height: 2px;
    background: #ffffff;
    transition: all 0.3s ease;
}

.menu-toggle[aria-expanded="true"] .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
}

.menu-toggle[aria-expanded="true"] .hamburger-line:nth-child(2) {
    opacity: 0;
}

.menu-toggle[aria-expanded="true"] .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
}

/* Header actions (konto, koszyk) */
.toneka-header-actions {
    display: flex;
    align-items: center;
    gap: 24px;
}

.toneka-account-link,
.toneka-cart-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #ffffff;
    text-decoration: none;
    font-family: 'Poppins', sans-serif;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    transition: opacity 0.3s ease;
}

.toneka-account-link:hover,
.toneka-cart-link:hover {
    opacity: 0.8;
}

.toneka-cart-icon {
    position: relative;
}

.cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #ffffff;
    color: #000000;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    font-weight: 600;
}

/* Skip link */
.skip-link {
    position: absolute;
    left: -9999px;
    top: 0;
    z-index: 999999;
    background: #000000;
    color: #ffffff;
    padding: 8px 16px;
    text-decoration: none;
    border: 1px solid #ffffff;
}

.skip-link:focus {
    left: 6px;
    top: 7px;
}

/* Screen reader text */
.screen-reader-text {
    border: 0;
    clip: rect(1px, 1px, 1px, 1px);
    clip-path: inset(50%);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute !important;
    width: 1px;
    word-wrap: normal !important;
}

/* =====================================
   STRONA PRODUKTU - LAYOUT GŁÓWNY
   ===================================== */
.toneka-product-page {
    background: #000000;
    min-height: 100vh;
}

/* Hero Section - Idealne kwadraty 50/50 */
.toneka-hero-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    aspect-ratio: 2/1; /* Proporcje 2:1 dla całej sekcji, co daje kwadraty 1:1 dla każdej połowy */
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 0;
    border-bottom: 1px solid #ffffff;
}

.toneka-hero-left {
    border-right: 1px solid #ffffff;
    display: flex;
    flex-direction: column;
    background: #000000;
}

.toneka-hero-right {
    background: #000000;
    display: flex;
    flex-direction: column;
}


/* Hero Content */
.toneka-hero-content {
    flex: 1;
    padding-left: 14%;
    padding-right: 14%;
    display: flex;
    flex-direction: column;
    justify-content: center; /* Wyrównanie w pionie do środka */
    align-items: flex-start; /* Wyrównanie w poziomie do lewej */
    /* gap: 30px;  nie wlaczac*/
}

/* Ikona kategorii */
.toneka-category-icon {
    width: 92px;
    height: 92px;
}

.toneka-category-icon svg {
    width: 100%;
    height: 100%;
}


.woocommerce-breadcrumb {
    color: #404040!important;
    font-size: 0.8rem!important;
    font-weight: 100!important;
    text-transform: uppercase;
}

.woocommerce-breadcrumb a {
    color:#ffffff!important;
    text-decoration: none;
}


/* Tytuł produktu */
.toneka-product-title {
    font-size: 3rem;
    font-weight: 700;
    text-transform: uppercase;
    line-height: 1.4;
    color: #ffffff;
    margin: 0;
}

/* Przycisk posłuchaj */
.toneka-listen-button {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    border-radius: 8px;
    background: transparent;
    border: none;
    color: #ffffff;
    text-transform: uppercase;
    font-size: 16px;
    letter-spacing: 1.44px;
    width: fit-content;
    cursor: pointer;
    font-family: 'Figtree', sans-serif;
}

/* Nawigacja w hero right */

/* Okładka produktu w hero right */
.toneka-hero-right .toneka-product-image {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%; /* Pełna wysokość kwadratu */
}

/* =====================================
   GALERIA PRODUKTU - SLIDESHOW
   ===================================== */

.toneka-custom-gallery {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

/* Slideshow container */
.toneka-gallery-slideshow {
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Pojedynczy slajd */
.gallery-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
}

.gallery-slide.active {
    opacity: 1;
}

.gallery-slide img {
    width: auto;
    height: auto;
    object-fit: contain;
}

/* Pojedynczy obraz wyróżniający */
.toneka-featured-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.toneka-featured-image img {
    width: auto;
    height: auto;
    object-fit: contain;
}

/* Wskaźniki galerii (dots) */
.gallery-dots {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 10;
}

.gallery-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: background 0.3s ease;
}

.gallery-dot:hover,
.gallery-dot.active {
    background: rgba(255, 255, 255, 1);
}

/* Placeholder gdy brak obrazów */
.toneka-no-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    font-size: 16px;
}

/* =====================================
   SEKCJA INFORMACJI O PRODUKCIE
   ===================================== */
.toneka-product-info-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: 100%;
    max-width: none;
    min-height: auto;
    margin: 0;
    padding: 0;
}

.toneka-product-details {
    border-right: 1px solid #ffffff;
    padding: 160px 100px 120px 140px;
    display: flex;
    flex-direction: column;
    gap: 32px;
    background: #000000;
}

.toneka-audio-section {
    padding: 140px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000000;
}

/* =====================================
   METADANE PRODUKTU
   ===================================== */
.toneka-product-metadata {
    width: 100%;
}

/* Wiersze metadanych */
.toneka-meta-row {
    border-bottom: 1px solid rgba(255, 255, 255, 0.4);
    padding: 9.463px 8px;
    display: flex;
    align-items: center;
    gap: 9.463px;
    min-height: 42.584px;
    background: #000000;
}

/* Wiersz z tytułem */
.toneka-title-row {
    border-bottom: 1px solid #ffffff;
}

.toneka-title-row .toneka-meta-label {
    font-family: 'Figtree', sans-serif;
    font-size: 20px;
    font-weight: 400;
    text-transform: uppercase;
    color: #ffffff;
}

/* Ikona w wierszu typu */
.toneka-meta-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
}

/* Etykiety metadanych */
.toneka-meta-label {
    font-family: 'Figtree', sans-serif;
    font-size: 14.01px;
    font-weight: 400;
    text-transform: uppercase;
    color: #969696;
    flex-shrink: 0;
}

/* Wartości metadanych */
.toneka-meta-value {
    font-family: 'Figtree', sans-serif;
    font-size: 14.01px;
    font-weight: 400;
    text-transform: uppercase;
    color: #ffffff;
    flex: 1;
}

.toneka-meta-value a {
    color: #ffffff;
    text-decoration: none;
}

.toneka-meta-value a:hover {
    text-decoration: underline;
}

/* Wiersz podzielony na dwie kolumny */
.toneka-meta-row-split {
    display: flex;
    justify-content: space-between;
}

.toneka-meta-half {
    display: flex;
    gap: 9.463px;
    flex: 1;
}

.toneka-meta-half:first-child {
    border-right: 1px solid rgba(255, 255, 255, 0.4);
    padding-right: 9.463px;
}

/* Opis produktu */
.toneka-description-row {
    border-bottom: 1px solid rgba(255, 255, 255, 0.4);
    padding: 12px 8px;
    min-height: 153px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 24px;
    background: #000000;
}

.toneka-product-description {
    font-family: 'Figtree', sans-serif;
    font-size: 16px;
    line-height: 1.4;
    color: #ffffff;
    width: 100%;
}

.toneka-product-description p {
    margin: 0;
}

.toneka-product-description .toneka-meta-label {
    color: #969696;
}

.toneka-more-link {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: 'Figtree', sans-serif;
    font-size: 14px;
    text-transform: uppercase;
    color: #ffffff;
    cursor: pointer;
    background: none;
    border: none;
}

.toneka-more-link:hover {
    opacity: 0.8;
}

/* Tagi */
.toneka-tags-row {
    border-bottom: none;
}

.toneka-tags-row .toneka-meta-label {
    font-family: 'Poppins', sans-serif;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.4);
    text-transform: uppercase;
    line-height: 1.4;
}

/* =====================================
   SELEKTOR WARIANTÓW
   ===================================== */
.toneka-carrier-selection-widget {
    max-width: 254px;
}

.toneka-carrier-title {
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    margin-bottom: 16px;
    color: #ffffff;
}

.toneka-carrier-options {
    background: rgba(54, 54, 54, 0.12);
    border: 1px solid rgba(255, 255, 255, 0.4);
}

.toneka-carrier-option {
    display: flex;
    align-items: center;
    padding: 12px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.4);
    cursor: pointer;
    min-height: 36px;
}

.toneka-carrier-option:last-child {
    border-bottom: none;
}

.toneka-carrier-radio {
    appearance: none;
    width: 16px;
    height: 16px;
    border: 1px solid #ffffff;
    border-radius: 50%;
    margin-right: 12px;
    position: relative;
}

.toneka-carrier-radio:checked::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    background: #ffffff;
    border-radius: 50%;
}

.toneka-carrier-label {
    font-size: 14px;
    color: #ffffff;
    text-transform: capitalize;
    flex-grow: 1;
}

/* Przycisk dodaj do koszyka */
.toneka-add-to-cart-button {
    background: #000000;
    border: 1px solid #ffffff;
    border-radius: 100px;
    padding: 12px 16px;
    color: #ffffff;
    font-size: 14px;
    text-transform: uppercase;
    cursor: pointer;
    margin-top: 20px;
    width: 204px;
    height: 48px;
}

.toneka-add-to-cart-button:hover {
    background: #ffffff;
    color: #000000;
}

/* =====================================
   ODTWARZACZ AUDIO
   ===================================== */
.toneka-audio-player {
    width: 100%;
    max-width: 530px;
    display: flex;
    flex-direction: column;
    gap: 24px;
}

.toneka-audio-controls h3 {
    font-family: 'Figtree', sans-serif;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    color: #ffffff;
    margin: 0;
    padding: 12px 0;
}

/* Placeholder dla wizualizacji audio */
.toneka-player-placeholder {
    width: 429px;
    height: 273px;
    border-radius: 12px;
    background: #3e3e3e;
    display: flex;
    align-items: center;
    justify-content: center;
}

.toneka-player-background {
    width: 100%;
    height: 100%;
    background: #3e3e3e;
    border-radius: 12px;
}

/* Interface odtwarzacza */
.toneka-player-interface {
    background: #000000;
    border-top: 1px solid #ffffff;
    padding: 20px 0;
    height: 55px;
    display: flex;
    align-items: center;
    gap: 30px;
    width: 429px;
}

.toneka-player-controls {
    display: flex;
    gap: 8px;
    align-items: center;
    min-width: 100px;
}

.toneka-play-button,
.toneka-skip-button,
.toneka-volume-button {
    background: transparent;
    border: none;
    width: 24px;
    height: 24px;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.toneka-play-button:hover,
.toneka-skip-button:hover,
.toneka-volume-button:hover {
    opacity: 0.8;
}

/* Informacje o utworze */
.toneka-track-info {
    display: flex;
    gap: 6px;
    align-items: center;
    font-family: 'Poppins', sans-serif;
    font-size: 12px;
    line-height: 24px;
    flex: 1;
}

.toneka-track-title {
    color: #ffffff;
    white-space: nowrap;
}

.toneka-track-time {
    color: rgba(255, 255, 255, 0.4);
    white-space: nowrap;
}

/* Kontrolki głośności */
.toneka-volume-controls {
    display: flex;
    gap: 8px;
    align-items: center;
}

/* =====================================
   SEKCJE "WIĘCEJ"
   ===================================== */
.toneka-more-section {
    background: #000000;
    border-top: 1px solid #ffffff;
    border-bottom: 1px solid #ffffff;
    padding: 27px 60px;
    height: 82px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100vw; /* Pełna szerokość viewport */
    max-width: none;
    margin: 0;
    position: relative;
    left: 50%;
    margin-left: -50vw;
}

.toneka-more-content {
    display: flex;
    align-items: center;
    gap: 20px;
    font-size: 25px;
    text-transform: uppercase;
    color: #ffffff;
}

/* =====================================
   PRODUKTY POWIĄZANE
   ===================================== */
.toneka-related-products {
    width: 100vw; /* Pełna szerokość viewport */
    max-width: none;
    margin: 0;
    position: relative;
    left: 50%;
    margin-left: -50vw;
}

.toneka-products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    width: 100%;
}

.toneka-product-card {
    border: 1px solid #ffffff;
    border-right: none;
    display: flex;
    flex-direction: column;
    background: #000000;
}

.toneka-product-card:nth-child(3n) {
    border-right: 1px solid #ffffff;
}

.toneka-product-card:nth-child(n+4) {
    border-top: none;
}

.toneka-product-category {
    background: #000000;
    padding: 8px 12px;
    font-family: 'Figtree', sans-serif;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    color: #ffffff;
    border-bottom: 1px solid #ffffff;
    height: 36px;
    display: flex;
    align-items: center;
}

.toneka-product-image {
    height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    background: #000000;
}

.toneka-product-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.toneka-product-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.toneka-product-footer {
    height: 42px;
    display: flex;
    border-top: 1px solid #ffffff;
    background: #000000;
}

.toneka-product-buy {
    padding: 12px;
    font-size: 20px;
    text-transform: uppercase;
    font-family: 'Poppins', sans-serif;
    color: #ffffff;
    width: 182px;
    display: flex;
    align-items: center;
}

.toneka-product-buy a {
    color: #ffffff;
    text-decoration: none;
}

.toneka-product-buy a:hover {
    opacity: 0.8;
}

.toneka-product-price {
    flex: 1;
    padding: 12px;
    font-size: 20px;
    text-transform: uppercase;
    font-family: 'Poppins', sans-serif;
    color: #ffffff;
    text-align: right;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

/* =====================================
   RESPONSYWNOŚĆ
   ===================================== */

/* Desktop - max-width dla bardzo szerokich ekranów */
@media (min-width: 1921px) {
    .toneka-hero-section,
    .toneka-product-info-section {
        max-width: 1920px;
        margin: 0 auto;
    }
}

/* Tablet */
@media (max-width: 1024px) and (min-width: 769px) {
    .toneka-hero-content {
        padding: 40px 80px 40px 100px;
    }
    
    .toneka-product-details {
        padding: 120px 80px 100px 100px;
    }
    
    .toneka-audio-section {
        padding: 100px;
    }
    
    .toneka-products-grid {
        grid-template-columns: 1fr 1fr;
    }
    
    .toneka-product-card:nth-child(2n) {
        border-right: 1px solid #ffffff;
    }
    
    .toneka-product-card:nth-child(3n) {
        border-right: none;
    }
}

/* Mobile */
@media (max-width: 768px) {
    /* Header mobile */
    .toneka-header-container {
        padding: 7px 20px;
        
    }
    
    
    .menu-toggle {
        display: flex;
        order: 3;
    }
    
    .toneka-primary-menu {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: #000000;
        border-top: 1px solid #ffffff;
        flex-direction: column;
        gap: 0;
        padding: 20px;
        z-index: 999;
    }
    
    .toneka-primary-menu.mobile-menu-open {
        display: flex;
    }
    
    .toneka-primary-menu .menu-item {
        padding: 12px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .toneka-primary-menu .menu-item:last-child {
        border-bottom: none;
    }
    
    .toneka-header-actions {
        gap: 16px;
        order: 2;
    }
    
    .toneka-account-link span,
    .toneka-cart-link span {
        display: none;
    }
    
    /* Hero section mobile */
    .toneka-hero-section {
        grid-template-columns: 1fr;
        height: auto;
    }
    
    .toneka-hero-left,
    .toneka-hero-right {
        border-right: none;
    }
    
    .toneka-hero-left {
        border-bottom: 1px solid #ffffff;
    }
    
    /* .toneka-hero-content {
        padding: 40px 20px;
    }
     */
    .toneka-hero-right .toneka-product-image {
        padding: 60px 40px;
    }
    
    .toneka-product-title {
        font-size: 48px;
    }
    
    .toneka-main-navigation .toneka-hero-menu {
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }
    
    .toneka-main-navigation .toneka-hero-menu .menu-item {
        padding: 4px;
    }
    
    .toneka-main-navigation .toneka-hero-menu .menu-item a {
        font-size: 12px;
    }
    
    .toneka-product-info-section {
        grid-template-columns: 1fr;
    }
    
    .toneka-product-details {
        border-right: none;
        border-bottom: 1px solid #ffffff;
        padding: 60px 20px;
    }
    
    .toneka-audio-section {
        padding: 60px 20px;
    }
    
    .toneka-products-grid {
        grid-template-columns: 1fr;
    }
    
    .toneka-product-card {
        border-right: 1px solid #ffffff;
    }
    
    .toneka-product-card:nth-child(2n),
    .toneka-product-card:nth-child(3n) {
        border-right: 1px solid #ffffff;
    }
    
    .toneka-category-icon {
        width: 60px;
        height: 60px;
    }
}
